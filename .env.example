# Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Application Settings
DEBUG=True

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=30

# OpenAI API Configuration (for Milestone 9: AI Chess Advisor)
OPENAI_API_KEY=your_openai_api_key_here

# Chess Analysis Configuration (Milestone 8)

# Lichess Cloud API (Primary evaluation method - FAST, Iteration 11)
USE_LICHESS_CLOUD=True
LICHESS_API_TIMEOUT=1.0

# Stockfish Configuration (Fallback when Lichess doesn't have position)
# Path to Stockfish executable
# Windows: STOCKFISH_PATH=C:/path/to/stockfish.exe
# Linux/Mac: STOCKFISH_PATH=/usr/games/stockfish
STOCKFISH_PATH=stockfish

# Engine analysis settings (optimized for fast fallback)
ENGINE_ANALYSIS_ENABLED=True
ENGINE_DEPTH=8
ENGINE_TIME_LIMIT=0.2

# Mistake Analysis UI Control (Iteration 11.1)
# Show or hide mistake analysis section in the UI
# Note: Performance may be slower with Lichess API depending on network conditions
MISTAKE_ANALYSIS_UI_ENABLED=False

# Google Analytics & Tag Manager Configuration (Iteration 11)
GTM_ENABLED=True
GTM_CONTAINER_ID=GT-NFBTKHBS
GA_MEASUREMENT_ID=G-VMYYSZC29R
