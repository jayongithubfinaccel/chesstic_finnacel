# Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Application Settings
DEBUG=True

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=30

# OpenAI API Configuration (for Milestone 9: AI Chess Advisor)
OPENAI_API_KEY=your-openai-api-key-here

# Stockfish Configuration (for Milestone 8: Mistake Analysis)
# Path to Stockfish executable
# Windows: STOCKFISH_PATH=C:/path/to/stockfish.exe
# Linux/Mac: STOCKFISH_PATH=/usr/games/stockfish
STOCKFISH_PATH=stockfish

# Engine analysis settings
ENGINE_ANALYSIS_ENABLED=True
ENGINE_DEPTH=15
ENGINE_TIME_LIMIT=2.0

