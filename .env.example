# Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Application Settings
DEBUG=True

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=30

# OpenAI API Configuration (for Milestone 9: AI Chess Advisor)
OPENAI_API_KEY=your_openai_api_key_here

# Chess Analysis Configuration (Milestone 8 & Iteration 12)

# Lichess Cloud API (Disabled by default in Iteration 12)
# Iteration 12: Disabled due to frequent timeouts making it slower than pure Stockfish
# Enable on servers with good connectivity (may work well from DigitalOcean)
USE_LICHESS_CLOUD=False
LICHESS_API_TIMEOUT=1.0

# Stockfish Configuration
# Path to Stockfish executable
# Windows: STOCK FISH_PATH=C:/stockfish/stockfish-windows-x86-64-avx2.exe
# Linux/Mac: STOCKFISH_PATH=/usr/games/stockfish
STOCKFISH_PATH=stockfish

# Engine analysis settings
ENGINE_ANALYSIS_ENABLED=True

# Iteration 12: Node-limited search (predictable timing)
# 50K nodes = ~0.05-0.1s per evaluation, sufficient for blunder detection
ENGINE_NODES=50000

# Backward compatibility: depth/time settings (used if ENGINE_NODES=0 or not set)
ENGINE_DEPTH=15
ENGINE_TIME_LIMIT=2.0

# Iteration 12: Analysis scope reduction for low-resource servers (1 vCPU)
# Max games analyzed (evenly distributed across time period)
MAX_ANALYSIS_GAMES=10
# Moves per game: 5 early + 5 middle + 5 endgame = 15 total
MOVES_PER_GAME=15

# Mistake Analysis UI Control (Iteration 11.1 & 12)
# Show or hide mistake analysis section in the UI
# Iteration 12: Re-enabled with faster analysis (~3s per game)
MISTAKE_ANALYSIS_UI_ENABLED=True

# Google Analytics & Tag Manager Configuration (Iteration 11)
GTM_ENABLED=True
GTM_CONTAINER_ID=GT-NFBTKHBS
GA_MEASUREMENT_ID=G-VMYYSZC29R
